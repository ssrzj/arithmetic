<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/dialog_update_rl_root_view"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发现新版本"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/dialog_update_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_update_dialog_close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/dialog_update_tv_content"
        android:layout_below="@id/dialog_update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />
    <TextView
        android:id="@+id/dialog_update_tv_install"
        android:layout_below="@id/dialog_update_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即安装"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_rectangle_main_color_solid"
        />

    <ProgressBar
        android:id="@+id/dialog_update_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@+id/dialog_update_tv_install"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
